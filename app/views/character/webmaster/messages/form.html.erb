<div class='chr-form-small'>
  <%= simple_nested_form_for @object, url: @form_action_url, method: :post do |f| %>
    <%= f.input :name %>
    <%= f.input :subject %>
    <%= f.input :message, as: :text, input_html: { rows: 10 } %>
    <%= f.input :reply_to %>
    <%= f.input :archived, as: :boolean %>
  <% end %>
</div>
